<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi.MainMenu"
             xmlns:y ="clr-namespace:Tamagotchi"
             Title="MainMenu">
    <VerticalStackLayout
        Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text=""
            x:Name="testLabel"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />

        <Image
            Source="egg.png"
            x:Name="main_image"
            HeightRequest="200"
            />
        <Button
            Text="Create a new Tamagochi"
            x:Name="tambutton"
            Clicked="toTamagochi"
            />
    </VerticalStackLayout>
</ContentPage>